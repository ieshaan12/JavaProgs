package battleship;
class cB{
	int arr[];
	cB()
	{arr=new int[7];
	for(int i=0;i<7;i++)
	{arr[i]=0;
	}
	int x=(int)Math.random()*5;
			arr[x]=1;
			arr[x+1]=1;
			arr[x+2]=1;
	}
	cB checkhit(int pos)
	{if(arr[pos]!=2)
		if(arr[pos]==0)
		{System.out.println("Miss!");
		}
		else if(arr[pos]==1)
		{System.out.println("Hit!");
		arr[pos]=2;
		}
		else
			{System.out.println("Already Used");
			}
	return this;
	}
	void display()
	{for(int i=0;i<7;i++)
	{System.out.print(arr[i]+" ");
	}
	}
}
public class board {
	public static void main(String[] args)
	{cB B=new cB();
	B.display();
	B.checkhit(3);
	B.display();	
	}
}
